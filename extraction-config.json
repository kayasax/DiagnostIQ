{
  "extraction": {
    "patterns": {
      "kql": [
        "```(kusto|kql)\\s*\\n([\\s\\S]*?)\\n```",
        "```\\s*\\n([^`]*(?:SigninLogs|AuditLogs|AADNonInteractiveUserSignInLogs|AADServicePrincipalSignInLogs|IdentityInfo|IdentityDirectoryEvents)[^`]*)\\n```",
        "let\\s+\\w+\\s*=.*;",
        "\\w+\\s*\\|\\s*where\\s+"
      ],
      "description": [
        "(?:description|summary|overview):\\s*(.+)",
        "^([^#\\n]*(?:troubleshoot|issue|problem|scenario)[^#\\n]*)",
        "^([^#\\n]*(?:this|the following|to help)[^#\\n]*)"
      ],
      "steps": [
        "^\\d+\\.\\s+(.+)$",
        "^[-*]\\s+(.+)$",
        "^Step \\d+:\\s*(.+)$"
      ],
      "tags": [
        "tags?:\\s*([^#\\n]+)",
        "keywords?:\\s*([^#\\n]+)"
      ]
    },
    "categories": {
      "authentication": [
        "signin", "sign-in", "authentication", "login", "mfa", "conditional access",
        "token", "oauth", "saml", "federation", "password", "credentials", "sso"
      ],
      "provisioning": [
        "provisioning", "scim", "user creation", "account creation", "lifecycle",
        "joiner", "leaver", "mover", "employee lifecycle", "hr driven"
      ],
      "synchronization": [
        "sync", "synchronization", "ad connect", "directory sync", "hybrid",
        "on-premises", "cloud sync", "delta sync", "aad connect"
      ],
      "applications": [
        "application", "app", "service principal", "enterprise app", "gallery app",
        "custom app", "app registration", "api permissions", "consent"
      ],
      "performance": [
        "performance", "slow", "latency", "timeout", "response time",
        "optimization", "bottleneck", "capacity", "throttling"
      ],
      "security": [
        "security", "breach", "incident", "threat", "risk", "compliance",
        "audit", "investigation", "suspicious activity", "risky user"
      ],
      "reporting": [
        "report", "reporting", "analytics", "dashboard", "metrics",
        "insights", "activity", "usage", "statistics"
      ],
      "identity-governance": [
        "governance", "access review", "entitlement management", "pim",
        "privileged identity", "lifecycle workflow", "terms of use"
      ]
    },
    "excludeDirectories": [
      ".git", ".vscode", "node_modules", "images", "assets", "media", "_images", "_assets"
    ],
    "includeFileExtensions": [
      ".md", ".markdown"
    ],
    "qualityThresholds": {
      "minQueryLength": 10,
      "minDescriptionLength": 20,
      "maxStepsPerScenario": 10,
      "maxTagsPerScenario": 8,
      "maxRelatedTopics": 5,
      "maxTroubleshootingTips": 5
    }
  },
  "output": {
    "formatVersion": "1.0",
    "includeMetadata": true,
    "validateSchema": true,
    "prettifyJson": true,
    "backupExisting": true
  },
  "logging": {
    "level": "info",
    "logToFile": false,
    "logFilePath": "./extraction.log"
  }
}
